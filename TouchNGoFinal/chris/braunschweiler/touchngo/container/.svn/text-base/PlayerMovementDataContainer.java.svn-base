package chris.braunschweiler.touchngo.container;

import org.anddev.andengine.entity.layer.tiled.tmx.TMXTile;

import chris.braunschweiler.touchngo.common.CommonDataManager;

/**
 * Container object that can contain data about player movement.
 * @author chrisbraunschweiler
 *
 */
public class PlayerMovementDataContainer {

	private int destinationX;
	private int destinationY;
	private float timeNeededToMove;
	
	public void setDestinationX(int destinationX) {
		this.destinationX = destinationX;
	}

	public void setDestinationY(int destinationY) {
		this.destinationY = destinationY;
	}

	public void setTimeNeededToMove(float timeNeededToMove) {
		this.timeNeededToMove = timeNeededToMove;
	}

	public int getDestinationX() {
		return this.destinationX;
	}

	public float getTimeNeededToMove() {
		return this.timeNeededToMove;
	}

	public int getDestinationY() {
		return this.destinationY;
	}
}
